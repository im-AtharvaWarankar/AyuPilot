# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (if not using Docker)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Celery Configuration
# CELERY_BROKER_URL=amqp://admin:admin@localhost:5672//
